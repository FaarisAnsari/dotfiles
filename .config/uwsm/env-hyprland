# set hyprcursor theme and size
export HYPRCURSOR_THEME=XCursor-Pro-Light-Hyprcursor
export HYPRCURSOR_SIZE=24

# nvidia shenanigans
export LIBVA_DRIVER_NAME=nvidia
export GBM_BACKEND=nvidia-drm
